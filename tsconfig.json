{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "ES2021",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["./node_modules/*"]
        },
        "types": ["node"],
        "strict": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react"
    },
    "include": ["src/**/*"]
}
